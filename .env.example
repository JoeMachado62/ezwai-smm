# =============================================================================
# EZWAI SMM Environment Variables
# Copy this file to .env and fill in your actual values
# =============================================================================

# Application Port (IMPORTANT for multi-project VPS)
# Change this if running multiple apps on same server to avoid port conflicts
# Examples: n8n uses 5678, EZWAI can use 5001, 5002, etc.
EZWAI_PORT=5001

# Database Configuration
DB_USERNAME=your_mysql_username
DB_PASSWORD=your_mysql_password
DB_HOST=localhost:3306
DB_NAME=ezwai_smm_db
DATABASE_URL=mysql+pymysql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}/${DB_NAME}

# Flask Application
FLASK_SECRET_KEY=your-secret-key-here-generate-with-python-secrets
FLASK_DEBUG=False

# Email Configuration (SendGrid)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USERNAME=apikey
EMAIL_PASSWORD=your_sendgrid_api_key_here

# OpenAI API (System-wide - used for all users)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Perplexity AI (System-wide - used for all users)
PERPLEXITY_AI_API_TOKEN=pplx-your-perplexity-api-key-here

# Replicate API (SeeDream-4 image generation)
REPLICATE_API_TOKEN=r8_your-replicate-api-token-here

